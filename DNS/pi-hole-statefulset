---
apiVersion: v1
kind: Namespace
metadata:
  name: pihole
---
apiVersion: v1
kind: Secret
metadata:
  name: pihole-secret
  namespace: pihole
type: Opaque
stringData:
  WEBPASSWORD: 'password' # YOUR PASSWORD
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: pihole
  namespace: pihole
  labels:
    app: pihole
spec:
  replicas: 1
  selector:
    matchLabels:
      app: pihole
  template:
    metadata:
      labels:
        app: pihole
    spec:
      containers:
      - name: pihole
        image: pihole/pihole:latest
        env:
        - name: TZ
          value: 'America/New_York'
        # Add the environment variable to make Pi-hole listen on all interfaces
        - name: DNSMASQ_LISTENING
          value: "all"
        envFrom:
        - secretRef:
            name: pihole-secret
        ports:
        - containerPort: 53
          name: dns-udp
          protocol: UDP
        - containerPort: 53
          name: dns-tcp
          protocol: TCP
        - containerPort: 80
          name: http
          protocol: TCP
        volumeMounts:
        - name: pihole-storage
          mountPath: /etc/pihole
        - name: dnsmasq-storage
          mountPath: /etc/dnsmasq.d
      volumes:
      - name: pihole-storage
        emptyDir: {}
      - name: dnsmasq-storage
        emptyDir: {}

---
apiVersion: v1
kind: Service
metadata:
  name: pihole-dns-service
  namespace: pihole
spec:
  type: LoadBalancer # MetalLB will assign an IP to this
  selector:
    app: pihole
  ports:
  - name: dns-udp
    protocol: UDP
    port: 53
    targetPort: 53
  - name: dns-tcp
    protocol: TCP
    port: 53
    targetPort: 53
---
apiVersion: v1
kind: Service
metadata:
  name: pihole-web-service
  namespace: pihole
spec:
  type: NodePort # Used for web interface, as Google Mesh doesn't handle port mapping
  selector:
    app: pihole
  ports:
  - name: http
    port: 80
    targetPort: 80
