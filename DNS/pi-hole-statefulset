---
apiVersion: v1
kind: Namespace
metadata:
  name: pihole
---
apiVersion: v1
kind: Secret
metadata:
  name: pihole-secret
  namespace: pihole
type: Opaque
stringData:
  WEBPASSWORD: 'password' # YOUR PASSWORD
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: pihole-dnsmasq
  namespace: pihole
data:
  01-pihole.conf: |
    local-service
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: pihole
  namespace: pihole
  labels:
    app: pihole
spec:
  replicas: 1
  selector:
    matchLabels:
      app: pihole
  template:
    metadata:
      labels:
        app: pihole
    spec:
      containers:
      - name: pihole
        image: pihole/pihole:latest
        securityContext:
          capabilities:
            add:
              - NET_BIND_SERVICE
        env:
        - name: TZ
          value: 'America/New_York'
        # Add the environment variable to make Pi-hole listen on all interfaces
        - name: DNSMASQ_LISTENING
          value: "all"
        - name: FTL_CMD
          value: "no-daemon"
        - name: PIHOLE_DNS_
          value: "8.8.8.8;8.8.4.4"
        envFrom:
        - secretRef:
            name: pihole-secret
        ports:
        - containerPort: 53
          name: dns-udp
          protocol: UDP
        - containerPort: 53
          name: dns-tcp
          protocol: TCP
        - containerPort: 80
          name: http
          protocol: TCP
        volumeMounts:
        - name: pihole-storage
          mountPath: /etc/pihole
        - name: dnsmasq-storage
          mountPath: /etc/dnsmasq.d
        - name: dnsmasq-config
          mountPath: /etc/dnsmasq.d/01-pihole.conf
          subPath: 01-pihole.conf
      volumes:
      - name: pihole-storage
        emptyDir: {}
      - name: dnsmasq-storage
        emptyDir: {}
      - name: dnsmasq-config
        configMap:
          name: pihole-dnsmasq
---
apiVersion: v1
kind: Service
metadata:
  name: pihole-dns-service
  namespace: pihole
spec:
  type: LoadBalancer
  selector:
    app: pihole
  ports:
  - name: dns-udp
    protocol: UDP
    port: 53
    targetPort: 53
  - name: dns-tcp
    protocol: TCP
    port: 53
    targetPort: 53
---
apiVersion: v1
kind: Service
metadata:
  name: pihole-web-service
  namespace: pihole
spec:
  type: NodePort # Used for web interface, as Google Mesh doesn't handle port mapping
  selector:
    app: pihole
  ports:
  - name: http
    port: 80
    targetPort: 80
